{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "app/dist/",
    "ignore": [
      "database.rules.json",
      "firebase.json",
      "gulpfile.js",
      "package.json",
      "README.md",
      "**/.*",
      "**/node_modules/**",
      "app/src/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
